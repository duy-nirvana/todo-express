extends ../../layouts/common.pug

block content
  h1 Create new user
  
  if errors
    each error in errors
      .alert.alert-danger= error
  
  form(method="POST", action="/users/create", enctype="multipart/form-data")
    .form-group
      label(for="name") Name: 
      input.form-control(type="text", name="name")
      
    .form-group
      label(for="phone") Phone: 
      input.form-control(type="text", name="phone")
      
    .form-group
      label(for='avatar') Avatar
      input#avatar.form-control-file(type='file', name='avatar')
      
    button.btn.btn-primary Create

    
  div
    a(href="/users") Return